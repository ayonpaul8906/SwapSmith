  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@sentry/node": "^10.39.0",
    "axios": "^1.12.2",
    "better-sqlite3": "^12.4.1",
    "dotenv": "^17.3.1",
    "drizzle-orm": "^0.45.1",
    "ethers": "^6.13.1",
    "express": "^5.1.0",
    "groq-sdk": "^0.33.0",
    "node-cron": "^3.0.3",
    "telegraf": "^4.16.3",
    "telegraf-ratelimit": "^2.0.0",
    "winston": "^3.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
